extends base.pug

block content 
  if errorMessage 
    span=errorMessage
  form(method="POST", action="/videos/upload")
    input(placeholder="Title", type="text" , name="title", required, maxLength=80)
    input(placeholder="Description", type="text" , name="description", required, minLength=20)
    input(placeholder="Hashtags, seperated by comma" type="text" , name="hashtags", required)
    input(type="submit", value="Upload Video")