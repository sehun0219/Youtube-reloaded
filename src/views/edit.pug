extends base.pug

block content
  h4 Update Video
  form(method="POST")
    input(name="title", placeholder = "Video Title", value=video.title, required)
    input(placeholder="Description", type="text" , name="description", required, minLength=20, value=video.description)
    input(placeholder="Hashtags, seperated by comma" type="text" , name="hashtags", required, value=video.hashtags.join(","))
    input(value = "Save", type = "submit")